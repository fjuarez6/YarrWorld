<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.orangecoastcollege.cs273.fjuarez6.yarrworld.MainActivity"
    android:id="@+id/welcomeLinearLayout"
    android:orientation="vertical"
    android:weightSum="1">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/welcome_text"
        android:id="@+id/welcomeTextView"
        android:layout_marginTop="0dp"
        android:gravity="center"
        android:textColor="#292d73"
        android:textSize="40sp"
        android:layout_weight="0.62" />

    <ImageView
        android:layout_width="331dp"
        android:layout_height="wrap_content"
        android:id="@+id/welcomeImageView"
        android:src="@drawable/occpirate"
        android:contentDescription="@string/occpirate"
        android:layout_gravity="center"
        android:layout_weight="0.12" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_text"
        android:id="@+id/speakButton"
        android:textColor="@color/abc_input_method_navigation_guard"
        android:textSize="12sp"
        android:clickable="true"
        android:gravity="center"
        android:layout_gravity="center_horizontal" />
</LinearLayout>
